doctype html
html(lang="en")
  head
    title Reminder App
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    .container
      h2 Reminder App
        if messages.error
            p(style="color:red") #{messages.error}
        if messages.success
            p(style="color:green") #{messages.success}
      
      h3 Login
      form(action="/api/login", method="POST")
        .form-group.mb-3
          label(for="username") Username
          input#username(type="text", class="form-control", placeholder="Username", name="username")
        .form-group.mb-3
          label(for="password") Password
          input#password(type="password", class="form-control", placeholder="Password", name="password")
        .d-grid.mt-3
          button(type="submit", class="btn btn-primary form-control") Submit